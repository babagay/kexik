                        <input type="text" class="form-control" id="products_shoppingcart_price" name="products_shoppingcart_price" value="{{ row.products_shoppingcart_price }}"  />
                    </div>
                    <p class="help-block hb-2">В формате 0.00</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-2" for="products_price">Оптовая цена</label>
                <div class="controls col-lg-10">
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="products_price" name="products_price" value="{{ row.products_price }}"  />
                    </div>
                    <p class="help-block hb-2">В формате 0.00</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-2" for="products_quantity">Остаток</label>
                <div class="controls col-lg-10">
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="products_quantity" name="products_quantity" value="{{ row.products_quantity }}"  />
                    </div>
                    <p class="help-block hb-2">Число в формате 0.00</p>
                </div>
            </div>



