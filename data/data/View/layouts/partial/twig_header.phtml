{% if( hasMessages() ) %}
{# JS not allow read headers of current request, only for XMLHTTPRequests :( #}

    <script>
        require(['bluz.notify'], function(notify) {
            notify.set({{ getMessages() }} );
        });
    </script>
{% endif %}

