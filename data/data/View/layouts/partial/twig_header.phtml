    <![endif]-->

{{ headScript() }}
{{ headStyle() }}
{{ link() }}
{{ meta() }}


{{ trigger('header') }}
</head>
<body data-spy="scroll" data-bluz-module="{{ module() }}" data-bluz-controller="{{ controller() }}">



